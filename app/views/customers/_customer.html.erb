<!-- app/views/customers/_customer.html.erb -->
<tr class="<%= index % 2 == 0 ? 'bg-gray-50' : 'bg-gray-200' %> h-12">
  <td><%= customer.id %></td>
  <td>
    <% if customer.image.attached? %>
      <%= image_tag(customer.image, class: "w-12 h-12 rounded-full object-cover") %>
    <% else %>
      <%= image_tag('default-customer.png', class: "w-12 h-12 rounded-full object-cover") %>
    <% end %>
  </td>
  <td><%= customer.full_name %></td>
  <td><%= customer.phone_number %></td>
  <td><%= customer.email_address %></td>
  <td><%= customer.notes %></td>
</tr>

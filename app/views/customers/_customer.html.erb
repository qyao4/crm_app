<!-- app/views/customers/_customer.html.erb -->
<div class="col-span-1 bg-white shadow rounded p-4">
  <div class="col-span-1">
    <% if customer.image.attached? %>
      <%= image_tag(customer.image, alt: customer.full_name, class: "rounded-full h-12 w-12 object-cover") %>
    <% else %>
      <%= image_tag('default-customer.png', alt: customer.full_name, class: "rounded-full h-12 w-12 object-cover") %>
    <% end %>
  </div>
  <div class="col-span-2">
    <h2 class="text-xl font-semibold"><%= customer.full_name %></h2>
    <p class="text-gray-600"><%= customer.phone_number %></p>
    <p class="text-gray-600"><%= customer.notes %></p>
    <p class="text-gray-500"><%= customer.email_address %></p>
  </div>
</div>

